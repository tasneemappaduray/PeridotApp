<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dusty_rose"
        tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_respondToRequest"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aclonica"
        android:text="FULFIL REQUEST"
        android:textAlignment="center"
        android:textSize="20sp"
        app:backgroundTint="@color/maroon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <Button
        android:id="@+id/btn_report"
        android:layout_width="168dp"
        android:layout_height="137dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aclonica"
        android:text="REPORT SUSPICIOUS BEHAVIOR"
        android:textSize="18sp"
        app:backgroundTint="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.762" />

    <TextView
        android:id="@+id/txt_userName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:fontFamily="@font/aclonica"
        android:hint="User Name"
        android:textAlignment="center"
        android:textColor="@color/light_pink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aclonica"
        android:text="CLICK TO FIND A PAD"
        android:textAlignment="center"
        android:textSize="20sp"
        app:backgroundTint="@color/maroon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/aclonica"
        android:text="Logout"
        android:textSize="16sp"
        app:backgroundTint="@color/light_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_help"
        app:layout_constraintVertical_bias="0.714" />

    <ImageView
        android:id="@+id/profile_imageView"
        android:layout_width="162dp"
        android:layout_height="145dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toTopOf="@+id/txt_userName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/female_profile_icon1" />

    <Button
        android:id="@+id/btn_find"
        android:layout_width="168dp"
        android:layout_height="137dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/aclonica"
        android:text="FIND A DOCTOR/GYNEA"
        android:textSize="20sp"
        app:backgroundTint="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

</androidx.constraintlayout.widget.ConstraintLayout>