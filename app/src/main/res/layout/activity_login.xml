<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
        android:background="@color/light_pink" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="246dp"
        android:layout_height="43dp"
        android:fontFamily="@font/aclonica"
        android:text="Login"
        android:textColor="@color/lighter_pink"
        android:textSize="24sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <TextView
        android:text="Peridot"
        android:layout_width="248dp"
        android:layout_height="61dp"
        android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintVertical_bias="0.023"
        android:textColor="@color/lighter_pink"
        android:textSize="48sp"
        android:textAlignment="center"
        android:fontFamily="@font/aclonica"
        android:textAllCaps="false"/>


    <EditText
        android:id="@+id/email_ed_txt"
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:background="@color/lighter_pink"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.113" />

    <EditText
        android:id="@+id/password_ed_txt"
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:background="@color/lighter_pink"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_ed_txt"
        app:layout_constraintVertical_bias="0.105" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="299dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="casual"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@color/dusty_rose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_ed_txt"
        app:layout_constraintVertical_bias="0.197" />

    <ProgressBar
        android:id="@+id/login_pBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login" />

    <TextView
        android:id="@+id/txt_registerHere"
        android:layout_width="342dp"
        android:layout_height="30dp"
        android:fontFamily="@font/aclonica"
        android:text="Not a member? Register here."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.09" />


</androidx.constraintlayout.widget.ConstraintLayout>